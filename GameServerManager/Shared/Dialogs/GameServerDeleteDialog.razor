<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Delete server
        </MudText>
    </TitleContent>
    <DialogContent>
        The server files will be permanently removed.

        <MudTextField Value="@GameServer?.Name" Label="Game Server" ReadOnly="true" Class="mt-5" />
        <MudTextField Value="@GameServer?.Config.Basic.Name" Label="Name" ReadOnly="true" />
        <MudTextField Value="@GameServer?.Config.Basic.Directory" Label="Directory" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Delete Forever</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public IGameServer? GameServer { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}
